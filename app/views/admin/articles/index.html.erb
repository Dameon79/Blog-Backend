<div class="container">
  <h1 class="jumbotron">Admin Panel</h1>

  <table class="table">
    <thead class="thead-light">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
      <th scope="col" colspan="3">Options</th>
    </tr>
  
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'View', admin_article_path(article), 
                class: "btn btn-outline-success"  %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article), 
                class: "btn btn-outline-warning"  %></td>
        <td><%= button_to 'Delete', admin_article_path(article),
                method: :delete,
                data: { confirm: 'Please confirm you want to delete this article' },  
                class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Create a New Article", new_admin_article_path, 
      class: "btn btn-primary" %>
  <%= link_to "Return to Homepage", welcome_index_url, 
      class: "btn btn-secondary" %>
</div>